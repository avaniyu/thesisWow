<UserControl x:Class="TermControl.Delete"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TermControl"
             xmlns:viewModel="clr-namespace:TermControl.ViewModels"
             xmlns:eyeTracking="clr-namespace:Tobii.Interaction.Wpf;assembly=Tobii.Interaction.Net"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!--later add button click image-switch handling-->
    <!--xmlns:keyImageProperty="clr-namespace:TermControl.KeyImageProperty"-->

    <Grid Name="MainGrid">
        <!--<Grid.DataContext>
            <viewModel:DeleteViewModel/>
        </Grid.DataContext>-->
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button Content="Toggle mode" Margin="0,0,0,15"/>
        <Button Content="Delete" Grid.Row="1" Margin="0,15,0,0" Name="btnDel" Command="{Binding DataContext.DeleteCommand, ElementName=MainGrid}"/>

        <Grid.Resources>
            
        </Grid.Resources>
            
    </Grid>
    
</UserControl>
